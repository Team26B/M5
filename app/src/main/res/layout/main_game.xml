<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Solar System: "
        android:textSize="20dp"
        android:id="@+id/solarSystemText"
        android:layout_margin="10dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Planet: "
        android:textSize="20dp"
        android:id="@+id/planetText"
        android:layout_below="@+id/solarSystemText"
        android:layout_margin="10dp"/>

    <Button
        android:id="@+id/marketButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_margin="10dp"
        android:layout_alignParentRight="true"
        android:text="Go to Market"
        android:onClick="goToMarket"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:text="Fuel Left: "
        android:textSize="20dp"
        android:id="@+id/fuelText"
        android:layout_below="@+id/planetText"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/travelButton"
        android:layout_alignParentBottom="true"
        android:layout_margin="10dp"
        android:layout_alignParentLeft="true"
        android:text="Travel"
        android:onClick="goToTravel"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_margin="10dp"
        android:text="SAVE GAME"
        android:onClick="saveGame"
        android:id="@+id/saveGame"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_margin="10dp"
        android:text="Load Game"
        android:onClick="loadGame"
        android:layout_above="@+id/saveGame"/>



</RelativeLayout>