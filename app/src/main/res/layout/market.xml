<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/marketView"
    android:orientation="vertical">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="WELCOME TO THE MARKET"
                android:layout_centerHorizontal="true"
                android:layout_margin="10dp"
                android:textSize="20dp"
                android:id="@+id/marketText"
                android:layout_weight="0.5"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Cargo Space: "
                android:id="@+id/cargoSpaceText"
                android:layout_below="@+id/marketText"
                android:layout_margin="10dp"
                android:layout_weight="0.5"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Credits: "
                android:id="@+id/numCreditsText"
                android:layout_below="@+id/cargoSpaceText"
                android:layout_margin="10dp"
                android:layout_weight="0.5"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/shipLayout"
                android:orientation="vertical"
                android:layout_below="@+id/numCreditsText">

                <TextView
                android:id="@+id/goodsOnShipText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/numCreditsText"
                android:layout_margin="10dp"
                android:text="Goods Currently on Ship: "
                android:layout_weight="1"/>

            </LinearLayout>



            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/linearLayout"
                android:orientation="vertical"
                android:layout_below="@+id/shipLayout">

                <TextView
                    android:id="@+id/goodsOnSaleText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/goodsOnShipText"
                    android:layout_margin="10dp"
                    android:text="Goods Currently for Sale: "
                    android:layout_weight="1" />

            </LinearLayout>

        </RelativeLayout>

    </ScrollView>



</RelativeLayout>